&none &none &none &none &none &none                 &none &none &none &none &none &none
&none &kp LGUI &kp LALT &kp LCTRL &kp LSFT &none    &none &none &none &none &none &none
&none &none &none &none &none &none                 &none &none &none &none &none &none
                  &none &none &trans                &none &none &none
                        >;
		label = "Mouse";
                };


                media_layer {
// -----------------------------------------------------------------------------------------
// |    |    |    |    |    ||   ||    |    |    |    |    |
// | GUI| ALT|CTRL|SFT |    ||---||    |    |    |    |    |
// |    |    |    |    |    ||   ||    |    |    |    |    |
//           |    |    |    ||   ||    |    |    |    |    |
                       bindings = <
&none &none &none &none &none &none                   &none &none &none &none &none &none
&none &kp LGUI &kp LALT &kp LCTRL &kp LSFT &none      &none &kp C_MUTE &kp C_VOL_DN &kp C_VOL_UP &none &none
&none &kp TILDE &none &none &none &none                   &none &kp C_RW &kp C_BRI_DN &kp C_BRI_UP &kp C_FF &none
                  &trans &none &none                   &kp C_PREV &kp C_PP &kp C_NEXT
                        >;
		label = "Media";
                };
                num_layer {
// -----------------------------------------------------------------------------------------
// | [ |    |    |    | ] ||   ||    |    |    |    |    |
// | / |    |    |    |    ||   ||    |SFT |CTRL|ALT |GUI |
// | ` |    |    |    |    ||   ||    |    |    |    |    |
//           |    |    |    ||   ||    |    |    |    |    |
